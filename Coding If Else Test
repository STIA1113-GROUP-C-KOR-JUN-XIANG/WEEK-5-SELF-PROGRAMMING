package SelfProgramming;
import java.util.Scanner;
public class TheIfElseStatement_1 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		Scanner sc = new Scanner(System.in);
		String name;
		int age ;
		double salary, loanamount, year, month, installment;
		System.out.println("Enter your name :");
		name = sc.nextLine();
		System.out.println("Enter your age :");
		age = sc.nextInt();
		System.out.println("Enter your monthly salary :");
		salary = sc.nextDouble();
		if((age>=20)&&(salary>=5000))
		System.out.println("You are qualified to apply the loan");
		else
			System.out.println("You are not qualifed to apply the loan");
		
	}

}
